{
  "root": true,
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "settings": {
    "next": {
      "rootDir": "/packages/my-app/"
    }
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "react-hooks/exhaustive-deps": "off"
  }
}
